<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListBox Name="EmployeesList" HorizontalContentAlignment="Stretch">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,7">
                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
						<TextBlock Text="{Binding FirstName}" Background="AliceBlue" />
                        <TextBlock Text="{Binding LastName}" Grid.Column="1" />
                        <TextBlock Text="{Binding DateOfBirth}" Grid.Column="2" Background="AliceBlue"/>
                        <TextBlock Text="{Binding Salary}" Grid.Column="3" />
                        <TextBlock Text="{Binding Position}" Grid.Column="4" Background="AliceBlue"/>
                        <TextBlock Text="{Binding Contract}" Grid.Column="5" />
                        <Button Background="LightCoral" Grid.Column="6">DEL</Button>
                        <Button Background="LightYellow" Grid.Column="7">EDIT</Button>
                    </Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
        
        <Border Grid.Column="1" Padding="30">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,10,0,0"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Width" Value="140"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                
                <DockPanel>
                    <Label>Imie:</Label>
                    <TextBox Name="FirstName" />
                </DockPanel>
                <DockPanel>
                    <Label>Nazwisko:</Label>
                    <TextBox Name="LastName" />
                </DockPanel>
                <DockPanel>
                    <Label>Data urodzenia:</Label>
                    <DatePicker Width="140" HorizontalAlignment="Right" Name="DateOfBirth" />
                </DockPanel>
                <DockPanel>
                    <Label>Stanowisko:</Label>
                    <ComboBox Width="140" HorizontalAlignment="Right" Name="Position">
                        <ComboBoxItem IsSelected="True">Programista</ComboBoxItem>
                        <ComboBoxItem>Projektant</ComboBoxItem>
                        <ComboBoxItem>Tester</ComboBoxItem>
                    </ComboBox>
                </DockPanel>
                <DockPanel>
                    <Label>Pensja:</Label>
                    <TextBox Name="Salary" />
                </DockPanel>
                <Label>Rodzaj umowy:</Label>
                <GroupBox x:Name="ContractType">
                    <StackPanel>
                        <RadioButton GroupName="contract" IsChecked="True" Checked="SetEmployeeContract">Umowa na czas nieokreślony</RadioButton>
                        <RadioButton GroupName="contract" Checked="SetEmployeeContract">Umowa na czas określony</RadioButton>
                        <RadioButton GroupName="contract" Checked="SetEmployeeContract">Umowa zlecenie</RadioButton>
                    </StackPanel>
                </GroupBox>
                <Button Background="LightGreen" Click="AddEmployee">Dodaj</Button>
                <Button Background="LightYellow" Click="SaveChangedEmployee">Edytuj</Button>
                <UniformGrid>
                    <Button Background="LightSkyBlue" Margin="0,10,5,0" Click="SaveEmployees">Zapisz</Button>
                    <Button Background="LightSteelBlue" Margin="5,10,0,0" Click="LoadEmployees">Wczytaj</Button>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
